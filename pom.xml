<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonarsource.parent</groupId>
    <artifactId>parent</artifactId>
    <version>36</version>
  </parent>

  <groupId>org.sonarsource.dotnet</groupId>
  <artifactId>sonar-csharp-plugin</artifactId>
  <packaging>sonar-plugin</packaging>
  <version>5.4-SNAPSHOT</version>

  <name>SonarQube C# Plugin</name>
  <description>Enables scanning of C# source files</description>
  <url>http://redirect.sonarsource.com/plugins/csharp.html</url>
  <inceptionYear>2014</inceptionYear>
  <organization>
    <name>SonarSource</name>
    <url>http://www.sonarsource.com</url>
  </organization>
  <licenses>
    <license>
      <name>GNU LGPL 3</name>
      <url>http://www.gnu.org/licenses/lgpl.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>dbolkensteyn</id>
      <name>Dinesh Bolkensteyn</name>
      <organization>SonarSource</organization>
    </developer>
  </developers>
  <scm>
    <connection>scm:git:git@github.com:SonarSource/sonar-csharp.git</connection>
    <developerConnection>scm:git:git@github.com:SonarSource/sonar-csharp.git</developerConnection>
    <url>https://github.com/SonarSource/sonar-csharp</url>
    <tag>HEAD</tag>
  </scm>
  <issueManagement>
    <system>JIRA</system>
    <url>https://jira.sonarsource.com/browse/SONARCS</url>
  </issueManagement>

  <properties>
    <sonar.version>4.5.2</sonar.version>
    <maven.test.redirectTestOutputToFile>true</maven.test.redirectTestOutputToFile>
    <sonar.pluginName>C#</sonar.pluginName>
    <sonar.pluginClass>org.sonar.plugins.csharp.CSharpPlugin</sonar.pluginClass>
    <gitRepositoryName>sonar-csharp</gitRepositoryName>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.sonarsource.fxcop</groupId>
      <artifactId>sonar-fxcop-library</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>org.sonarsource.dotnet</groupId>
      <artifactId>sonar-dotnet-tests-library</artifactId>
      <version>1.3.2</version>
    </dependency>

    <dependency>
      <groupId>org.codehaus.sonar.sslr-squid-bridge</groupId>
      <artifactId>sslr-squid-bridge</artifactId>
      <version>2.6</version>
    </dependency>
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>2.4</version>
    </dependency>

    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${sonar.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-duplications</artifactId>
      <version>${sonar.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-deprecated</artifactId>
      <version>${sonar.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>0.9.15</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <version>1.4</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>1.8.5</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-plugin-size</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <phase>verify</phase>
            <configuration>
              <rules>
                <requireFilesSize>
                  <maxsize>9000000</maxsize>
                  <minsize>7000000</minsize>
                  <files>
                    <file>${project.build.directory}/${project.build.finalName}.jar</file>
                  </files>
                </requireFilesSize>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <executions>
          <execution>
            <id>clean-nuget-files</id>
            <phase>validate</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <filesets>
                <fileset>
                  <directory>src/main/resources/static/nuget</directory>
                </fileset>
              </filesets>
            </configuration>
          </execution>
          <execution>
            <id>delete-nuget-folder</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <filesets>
                <fileset>
                  <directory>src/main/resources/static/nuget</directory>
                </fileset>
              </filesets>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-plugin</id>
            <phase>validate</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>SonarAnalyzer.CSharp</artifactId>
                  <version>LATEST</version>
                  <type>nupkg</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>SonarLint.Descriptor.CSharp</artifactId>
                  <version>LATEST</version>
                  <type>nupkg</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>SonarLint.Runner</artifactId>
                  <version>LATEST</version>
                  <type>nupkg</type>
                  <overWrite>true</overWrite>
                </artifactItem>
              </artifactItems>
              <outputDirectory>src/main/resources/static/nuget</outputDirectory>
              <overWriteReleases>true</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>copy-plugin-with-version</id>
            <phase>initialize</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>SonarAnalyzer.CSharp</artifactId>
                  <version>LATEST</version>
                  <type>nupkg</type>
                  <overWrite>true</overWrite>
                </artifactItem>
              </artifactItems>
              <outputDirectory>src/main/resources/static/nuget</outputDirectory>
              <overWriteReleases>true</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
              <stripVersion>false</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>unzip-nuget</id>
            <phase>initialize</phase>
            <configuration>
              <exportAntProperties>true</exportAntProperties>
              <tasks>
                <unzip src="src/main/resources/static/nuget/SonarAnalyzer.CSharp.nupkg" dest="src/main/resources/static/nuget/SonarAnalyzer.CSharp/" />
                <unzip src="src/main/resources/static/nuget/SonarLint.Descriptor.CSharp.nupkg" dest="src/main/resources/static/nuget/SonarLint.Descriptor.CSharp/" />
                <unzip src="src/main/resources/static/nuget/SonarLint.Runner.nupkg" dest="src/main/resources/static/nuget/SonarLint.Runner/" />
                <!-- SQALE XML in sslr requires a resource to read from -->
                <copy todir="src/main/resources/org/sonar/plugins/csharp">
                  <fileset dir="src/main/resources/static/nuget/SonarLint.Descriptor.CSharp/xml">
                    <include name="*.xml"/>
                  </fileset>
                </copy>
                <zip destfile="src/main/resources/static/SonarAnalyzer.zip"
                     basedir="src/main/resources/static/nuget/SonarAnalyzer.CSharp/analyzers"/>
                <zip destfile="src/main/resources/SonarLint.Runner.zip"
                     basedir="src/main/resources/static/nuget/SonarLint.Runner/assembly"/>

                <path id="path.with.version">
                  <fileset dir="src/main/resources/static/nuget/">
                    <include name="SonarAnalyzer.CSharp-*-build*.nupkg"/>
                  </fileset>
                </path>
                <property name="name.with.version" refid="path.with.version"/>
                <echo message="name.with.version: ${name.with.version}"/>
              </tasks>

            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>regex-property</id>
            <goals>
              <goal>regex-property</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <name>sonaranalyzer.version</name>
              <value>${name.with.version}</value>
              <regex>^.*SonarAnalyzer\.CSharp-(.*)-build.*$</regex>
              <replacement>$1</replacement>
              <failIfNoMatch>true</failIfNoMatch>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>version-output</id>
            <goals>
              <goal>run</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <tasks>
                <echo file="src/main/resources/static/version.txt" message="${sonaranalyzer.version}" />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <profiles>
    <profile>
      <id>noVersionNumberInJar</id>
      <build>
        <finalName>${project.artifactId}</finalName>
      </build>
    </profile>
  </profiles>
</project>
